# OmniDev Configuration Sample
# Copy this file to .env and fill in your values

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# API Keys
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# OpenAI API Key (for GPT-4 or GPT-3.5)
OPENAI_API_KEY=sk-...

# Anthropic API Key (for Claude, optional)
ANTHROPIC_API_KEY=sk-ant-...

# GitHub Personal Access Token (needs repo, workflow, write:packages scopes)
GITHUB_TOKEN=ghp_...

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# GitHub Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# GitHub repository owner/organization
GITHUB_OWNER=your-org

# GitHub repository name
GITHUB_REPO=your-repo

# GitHub webhook secret (for receiving events)
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Application Settings
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Application name (DevHive, AutoForge, or MergeMind)
APP_NAME=DevHive

# Environment (development, staging, production)
ENVIRONMENT=development

# Backend API port
API_PORT=8000

# Frontend dashboard port
DASHBOARD_PORT=3000

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Vector Database (for RAG)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Vector DB type (chromadb, pinecone, qdrant)
VECTOR_DB_TYPE=chromadb

# ChromaDB persistence path
CHROMADB_PATH=./data/chromadb

# Pinecone API Key (if using Pinecone)
PINECONE_API_KEY=

# Pinecone environment (if using Pinecone)
PINECONE_ENV=

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Agent Policies
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Maximum lines of code per PR
MAX_LOC_PER_PR=500

# Allow new dependencies
ALLOW_NEW_DEPS=false

# Minimum test coverage percentage
MIN_TEST_COVERAGE=80

# Allow breaking changes
ALLOW_BREAKING_CHANGES=false

# Maximum retry attempts for failed tasks
MAX_RETRY_ATTEMPTS=3

# Auto-merge approved PRs
AUTO_MERGE_ENABLED=false

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Code Analysis Tools
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Enable static analysis
ENABLE_STATIC_ANALYSIS=true

# Enable security scanning
ENABLE_SECURITY_SCAN=true

# Enable dependency audit
ENABLE_DEPENDENCY_AUDIT=true

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Observability
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Enable structured logging
ENABLE_STRUCTURED_LOGGING=true

# Log file path
LOG_FILE_PATH=./logs/omnidev.log

# Enable token cost tracking
ENABLE_COST_TRACKING=true

# Metrics export (prometheus, statsd, none)
METRICS_EXPORT=prometheus

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Database
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Database URL (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///./data/omnidev.db

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Advanced Settings
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Model for PlannerAgent
PLANNER_MODEL=gpt-4-turbo-preview

# Model for FeatureDevAgent
FEATURE_DEV_MODEL=gpt-4-turbo-preview

# Model for TesterAgent
TESTER_MODEL=gpt-4-turbo-preview

# Model for RefactorAgent
REFACTOR_MODEL=gpt-4-turbo-preview

# Model for ReviewerAgent
REVIEWER_MODEL=gpt-4-turbo-preview

# Temperature for code generation (0.0-1.0)
CODE_GENERATION_TEMPERATURE=0.2

# Max tokens per agent response
MAX_TOKENS_PER_RESPONSE=4000

# Enable caching of embeddings
ENABLE_EMBEDDING_CACHE=true
